<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/sevenButton" android:onClick="addSeven"
            app:layout_constraintTop_toBottomOf="@+id/fourButton"
            app:layout_constraintBottom_toTopOf="@+id/zeroButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/eightButton"/>
    <Button
            android:text="8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/eightButton" android:onClick="addEight"
            app:layout_constraintTop_toBottomOf="@+id/fiveButton"
            app:layout_constraintBottom_toTopOf="@+id/zeroButton" app:layout_constraintStart_toEndOf="@+id/sevenButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/nineButton"/>
    <Button
            android:text="0"
            android:layout_width="262dp"
            android:layout_height="70dp"
            android:id="@+id/zeroButton" android:onClick="addZero"
            app:layout_constraintTop_toBottomOf="@+id/eightButton"
            app:layout_constraintBottom_toTopOf="@+id/clearButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/divButton"/>
    <Button
            android:text="9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/nineButton" android:onClick="addNine"
            app:layout_constraintTop_toBottomOf="@+id/sixButton"
            app:layout_constraintBottom_toTopOf="@+id/zeroButton" app:layout_constraintStart_toEndOf="@+id/eightButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/subButton"/>
    <Button
            android:text="-"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/subButton" android:onClick="addSub"
            app:layout_constraintTop_toBottomOf="@+id/multButton"
            app:layout_constraintBottom_toTopOf="@+id/divButton" app:layout_constraintStart_toEndOf="@+id/nineButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="/"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/divButton" android:onClick="addDiv"
            app:layout_constraintTop_toBottomOf="@+id/subButton"
            app:layout_constraintBottom_toTopOf="@+id/evalButton" app:layout_constraintStart_toEndOf="@+id/zeroButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/fourButton" android:onClick="addFour"
            app:layout_constraintTop_toBottomOf="@+id/oneButton"
            app:layout_constraintBottom_toTopOf="@+id/sevenButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fiveButton"/>
    <Button
            android:text="5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/fiveButton" android:onClick="addFive"
            app:layout_constraintTop_toBottomOf="@+id/twoButton"
            app:layout_constraintBottom_toTopOf="@+id/eightButton" app:layout_constraintStart_toEndOf="@+id/fourButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sixButton"/>
    <Button
            android:text="6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/sixButton" android:onClick="addSix"
            app:layout_constraintTop_toBottomOf="@+id/threeButton"
            app:layout_constraintBottom_toTopOf="@+id/nineButton" app:layout_constraintStart_toEndOf="@+id/fiveButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/multButton"/>
    <Button
            android:text="x"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/multButton" android:onClick="addMult"
            app:layout_constraintTop_toBottomOf="@+id/sumButton"
            app:layout_constraintBottom_toTopOf="@+id/subButton" app:layout_constraintStart_toEndOf="@+id/sixButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/sumButton" android:onClick="addSum"
            app:layout_constraintTop_toBottomOf="@+id/resTextView"
            app:layout_constraintBottom_toTopOf="@+id/multButton" app:layout_constraintStart_toEndOf="@+id/threeButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/threeButton" android:onClick="addThree"
            app:layout_constraintTop_toBottomOf="@+id/resTextView"
            app:layout_constraintBottom_toTopOf="@+id/sixButton" app:layout_constraintStart_toEndOf="@+id/twoButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sumButton"/>
    <Button
            android:text="2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/twoButton" android:onClick="addTwo"
            app:layout_constraintTop_toBottomOf="@+id/resTextView"
            app:layout_constraintBottom_toTopOf="@+id/fiveButton" app:layout_constraintStart_toEndOf="@+id/oneButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/threeButton"/>
    <Button
            android:text="1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/oneButton" android:onClick="addOne"
            app:layout_constraintTop_toBottomOf="@+id/resTextView"
            app:layout_constraintBottom_toTopOf="@+id/fourButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/twoButton"/>
    <TextView
            android:text="Result"
            android:layout_width="345dp"
            android:layout_height="49dp"
            android:id="@+id/resTextView" android:textSize="24sp"
            android:clickable="false" android:editable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/oneButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="="
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/evalButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/divButton"
            app:layout_constraintStart_toEndOf="@+id/clearButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="evaluate"/>
    <Button
            android:text="C"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/clearButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/zeroButton"
            app:layout_constraintStart_toEndOf="@+id/dotButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/evalButton" android:onClick="clearRes"/>
    <Button
            android:text="."
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dotButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/zeroButton"
            app:layout_constraintStart_toEndOf="@+id/signButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/clearButton" android:onClick="addDot"/>
    <Button
            android:text="+/-"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/signButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/zeroButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/dotButton" android:onClick="changeSign"/>
</android.support.constraint.ConstraintLayout>